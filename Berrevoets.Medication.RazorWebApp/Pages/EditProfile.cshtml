@page
@model Berrevoets.Medication.RazorWebApp.Pages.EditProfileModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@{
    ViewData["Title"] = "Edit Profile";
}

<h3>Edit Profile</h3>

<form method="post">
    <div class="mb-3">
        <label asp-for="ProfileData.Username" class="form-label"></label>
        <input asp-for="ProfileData.Username" class="form-control" />
        <span asp-validation-for="ProfileData.Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProfileData.Email" class="form-label"></label>
        <input asp-for="ProfileData.Email" class="form-control" />
        <span asp-validation-for="ProfileData.Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ProfileData.PhoneNumber" class="form-label"></label>
        <input asp-for="ProfileData.PhoneNumber" class="form-control" />
        <span asp-validation-for="ProfileData.PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            @if (TempData["NotificationMessage"] != null)
            {
                <text>
                    window.showToast('@TempData["NotificationTitle"]', '@TempData["NotificationMessage"]', '@TempData["NotificationType"]');
                </text>
            }
        });
    </script>
}